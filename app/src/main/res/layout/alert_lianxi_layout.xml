<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/alertdialog_bg">
    <TextView
        android:id="@+id/alert_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/font"
        android:text="您已是最新版本" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/alert_tv"
        android:id="@+id/top2"
        android:background="@mipmap/scrollbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lianxiLi"
        android:layout_below="@id/top2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@mipmap/customer"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拨打客服电话"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/customer"
            android:textColor="@color/font"
            android:textSize="14sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/alertdialog_bg_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/alert_btn2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:textColor="@color/ss_font"
                android:textSize="14sp"
                android:text="取消" />
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ededed"/>
            <Button
                android:id="@+id/alert_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:textColor="@color/font"
                android:textSize="14sp"
                android:text="确认" />

        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
