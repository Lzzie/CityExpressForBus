<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_width="match_parent"
    android:minHeight="90dp"
    android:layout_height="90dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/ss_font"
                    android:textSize="16sp"
                    android:text="快件单号："
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/record_id"
                    android:textColor="@color/ss_font"
                    android:textSize="16sp"
                    android:text="12345678912345678"
                    android:layout_width="0dp"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/unpaid"
                    android:id="@+id/order_status"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/ss_font"
                    android:textSize="16sp"
                    android:text="临沂市河东区"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:id="@+id/form_address"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/jt2"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
                <TextView
                    android:textColor="@color/ss_font"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:text="临沂市兰山区市政府"
                    android:id="@+id/to_address"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/ss_font"
                    android:textSize="16sp"
                    android:text="下单时间："
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@color/ss_font"
                    android:textSize="16sp"
                    android:text="2017.3.16 9:20"
                    android:id="@+id/create_time"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
</LinearLayout>
</LinearLayout>

