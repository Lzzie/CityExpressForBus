<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/alertdialog_bg">
    <TextView
        android:id="@+id/alert_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:text="提示" />
    <TextView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/alert_tv"
        android:id="@+id/alert_tv2"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="确定退出?" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/alertdialog_bg_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/alert_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:textColor="@color/font"
                android:textSize="14sp"
                android:text="确定" />
            <Button
                android:id="@+id/alert_btn2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:textColor="@color/select_textview_f"
                android:textSize="14sp"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
