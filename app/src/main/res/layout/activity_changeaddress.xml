<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#fafafa"
    tools:context="com.huina.lzzie.citybus_express.fn.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Li_top"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:onClick="goback"
                android:clickable="true"
                android:id="@+id/imageView" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#5e5f61"
                android:layout_marginRight="20dp"
                android:focusableInTouchMode="true"
                android:text="@string/changeAddress"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|left"
                    android:text="@string/mz"
                    android:textColor="@color/ss_font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/jj_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/mz2"
                    android:textColor="@color/qs_font"
                    android:textColorHint="@color/qs_font"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ededed"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/txl"
                    android:textSize="14sp"
                    android:textColor="@color/font"
                    android:id="@+id/addressList"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/dh"
                    android:textSize="16sp"
                    android:textColor="@color/ss_font"
                    android:gravity="center|left"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:hint="@string/dh2"
                    android:id="@+id/jj_phone"
                    android:textColorHint="@color/qs_font"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColor="@color/qs_font"
                    android:gravity="center|left"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/sf"
                    android:textSize="16sp"
                    android:textColor="@color/ss_font"
                    android:gravity="center|left"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:hint="@string/sf2"
                    android:id="@+id/jj_sf"
                    android:textColorHint="@color/qs_font"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColor="@color/qs_font"
                    android:gravity="center|left"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/sq"
                    android:textSize="16sp"
                    android:textColor="@color/ss_font"
                    android:gravity="center|left"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:hint="@string/sq2"
                    android:id="@+id/jj_sq"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColorHint="@color/qs_font"
                    android:textColor="@color/qs_font"
                    android:gravity="center|left"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ededed"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="@string/xxdz"
                    android:textSize="16sp"
                    android:textColor="@color/ss_font"
                    android:gravity="center|left"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:hint="@string/xxdz2"
                    android:id="@+id/jj_xxdz"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColorHint="@color/qs_font"
                    android:textColor="@color/qs_font"
                    android:gravity="center|left"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:text="@string/bc"
        android:id="@+id/change_button"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/login_button"/>
</LinearLayout>